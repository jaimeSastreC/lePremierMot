{% extends "@App/basePublic.html.twig" %}
{#navbar sur Réservation#}
{% block active5 %}active{% endblock %}

{% block contenu %}

    {#{{ dump(formcontact) }}#}
    <div class="container-fluid main resa_body_font ">
        <div class="row">
            <div class="col-md-3 border-right counters">
                <aside>
                    <div>
                        <em><h1>Une Question ?</h1></em>
                        <em><h1>Une Sugestion ?</h1></em>
                        <em><h1>Nous rencontrer ?</h1></em>
                        <em><h2>Ecrivez-nous! </h2></em>
                    </div>
                </aside>
            </div>
            <div class="col-md-7">
                <main>
                    <div class="container ">
                        <div class="row d-block">

                            <div class="offset-md-1 col">
                                <header >
                                    <h2 class="title">Espace Contact</h2>
                                </header>
                                <p><em>Veuillez remplir le formulaire mail<br></em>
                                </p>
                            </div>
                            <div class="text-center offset-md-1 col-4" role="alert">
                                {# ... editer tout message Flash #}
                                {% for label, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="flash-{{ label }}">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                            <div class="row">
                                <div class="offset-md-2 col-7 mt-3">
                                    Date mail : {{ "now"|date("d/m/Y") }}
                                    {{ form_start(formcontact, {'attr': {'class': 'form'}}) }}

                                    <p>
                                        {#retourne message erreur si besoin après méthode isValid dans Controleur#}
                                        {{ form_errors(formcontact.name) }}
                                        {{ form_label(formcontact.name, null, {'label_attr':  {'class': 'form-label'}}) }}
                                    </p>
                                    <p>
                                        {{ form_widget(formcontact.name, {'attr': {'class': 'form-control'}}) }}
                                    </p>
                                    <p>
                                        {#retourne message erreur si besoin après méthode isValid dans Controleur#}
                                        {{ form_errors(formcontact.email) }}
                                        {{ form_label(formcontact.email, null, {'label_attr':  {'class': 'form-label'}}) }}
                                    </p>
                                    <p>
                                        {{ form_widget(formcontact.email, {'attr': {'class': 'form-control'}}) }}
                                    </p>
                                    <p>
                                        {#retourne message erreur si besoin après méthode isValid dans Controleur#}
                                        {{ form_errors(formcontact.subject) }}
                                        {{ form_label(formcontact.subject, null, {'label_attr':  {'class': 'form-label'}}) }}
                                    </p>
                                    <p>
                                        {{ form_widget(formcontact.subject, {'attr': {'class': 'form-control'}}) }}
                                    </p>
                                    <p>
                                        {#retourne message erreur si besoin après méthode isValid dans Controleur#}
                                        {{ form_errors(formcontact.message) }}
                                        {{ form_label(formcontact.message, null, {'label_attr':  {'class': 'form-label'}}) }}
                                    </p>
                                    <p>
                                        {{ form_widget(formcontact.message, {'attr': {'class': 'form-control'}}) }}
                                    </p>
                                    <p>
                                        {{ form_widget(formcontact.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                    </p>
                                    <p>
                                    {# génération du champ CSRF - _token  (Cross Site Request Forgeries en champ caché #}
                                    {{ form_rest(formcontact) }}

                                    {{ form_end(formcontact) }}
                                        RGPD - en envoyant ce message je reconnais autoriser lePremiermOt à me contacter par e-mail *
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </main>
            </div>
        </div>
        <div class="row image_contact d-block">
        </div>
    </div>

{% endblock %}
