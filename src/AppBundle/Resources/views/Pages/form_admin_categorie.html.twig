{% extends "@App/baseAdmin.html.twig" %}



{% block contenu %}

    {#{{ dump(formcategorie) }}#}

    <div>
        {{ form_start(formcategorie, {'attr': {'class': 'form'}}) }}
        <p>
            {#retourne message erreur si besoin après méthode isValid dans Controleur #}
            {{ form_errors(formcategorie.libelle) }}
            {{ form_label(formcategorie.libelle, null, {'label_attr':  {'class': 'form-label'}}) }}
