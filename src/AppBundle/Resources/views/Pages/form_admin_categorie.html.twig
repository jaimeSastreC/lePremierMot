        <p>
            {{ form_widget(formcategorie.libelle, {'attr': {'class': 'form-control'}}) }}
        </p>
        <p>
            {{ form_errors(formcategorie.tarif) }}
            {{ form_label(formcategorie.tarif, null, {'label_attr':  {'class': 'form-label'}}) }}
        </p>
        <p>
            {{ form_widget(formcategorie.tarif, {'attr': {'class': 'form-control'}}) }}
