{% extends "@App/baseAdmin.html.twig" %}

{% block contenu %}

    <p>
        <a href="{{ path('admin_form_tarif') }}">Ajouter un Tarif</a>
    </p>

    <div class="text-align-center">
        {# Liste les tarifs avec une boucle for #}
        {% for tarif in tarifs %}
            {#{{ dump(tarif) }}#}

                <p>
                    tarif : {{ tarif.prixplace }}&euro;
                </p>

                <a href="{{ path('admin_supp_tarif',  {'id': tarif.id}) }}">
                    <button class="supprimer" type="submit">Supprimer</button>
                </a>
                <a href="{{ path('admin_modif_tarif',  {'id': tarif.id}) }}">
                    <button class="modifier" type="submit">Modifier</button>
                </a>
                <hr>

        {% endfor %}
    </div>


{% endblock %}
