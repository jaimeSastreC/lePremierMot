{% extends "@App/baseAdmin.html.twig" %}

{% block contenu %}Administrator

    <p>
        <a href="{{ path('accueil')}}">Lien accueil</a>
    </p>
    <p>
        <a href="{{ path('admin_form_categorie') }}">Ajouter une catégorie</a>
    </p>

    <div class="text-align-center">
        {# Liste les spectaurss avec une boucle for #}
        {% for categorie in categories %}
            {#{{ dump(categorie) }}#}

                <p>
                    catégorie : {{ categorie.libelle }}&nbsp{{ categorie.tarif.prixplace }}&nbsp{{ categorie.spectacle.nomspectacle }}
                </p>

                <a href="{{ path('admin_supp_categorie',  {'id': categorie.id}) }}">
                    <button class="supprimer" type="submit">Supprimer</button>
                </a>
                <a href="{{ path('admin_modif_categorie',  {'id': categorie.id}) }}">
                    <button class="modifier" type="submit">Modifier</button>
                </a>
                <hr>

        {% endfor %}
    </div>

{% endblock %}

{% block isasideBlock %}Asideblock{% endblock %}