{% extends "@App/baseAdmin.html.twig" %}

{% block contenu %}
    <p>
        <a href="{{ path('admin_form_client') }}">Ajouter un Client</a>
    </p>

    <div class="text-align-center">

        {% if client  %}
            <div>
                <p>
                    Client : {{ client.civiliteClient}}&nbsp
                    {{ client.nomClient}}&nbsp
                    {{ client.prenomClient}}<br>

                    Adresse : {{ client.adresseClient}}&nbsp
                    {{ client.cpClient}}&nbsp
                    {{ client.villeClient}}<br>
                    tel : {{ client.telClient}}&nbsp
                    mail : {{ client.mailClient}}
                </p>

                <a href="{{ path('admin_supp_client',  {'id': client.id}) }}">
                    <button class="supprimer" type="submit">Supprimer</button>
                </a>
                <a href="{{ path('admin_modif_client',  {'id': client.id}) }}">
                    <button class="modifier" type="submit">Modifier</button>
                </a>
                <hr>

            </div>

        {% endif%}
    </div>

{% endblock %}
